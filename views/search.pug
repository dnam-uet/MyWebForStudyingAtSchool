extends ./layout/common-layout
block content
    button#scroll__top
        i.fa.fa-arrow-up
    .header
        .header__head
            .component__header
                .header__logo
                    a(href='/')
                        #header__logo
                .header__search
                    form(method='get')
                        input.header__search-input(type='text', name='txtSearch', placeholder='Nhập tên máy tính cần tìm', maxlength='50')
                        button.button.button-search(type='submit')
                            i.fa.fa-search
                div
                    a(href='/shopping')
                        button#shopping-cart.button
                            i.fa.fa-shopping-cart.fa-2x
                            if session.countTotal>0
                                span.countTotal= session.countTotal
        .header__menu
            .component__header
                .header__laptop#laptop-logo
                    a.link__laptop(href='#')
                        i.fa.fa-laptop
                        ul.sub__menu
                            li.sub__menu-element
                                a.link__laptop(href='apple.html')
                                    i.fa.fa-apple
                                    |  MacOS
                            li.sub__menu-element
                                a.link__laptop.link__sub2(href='#')
                                    i.fa.fa-windows
                                    |  Windows
                                    ul.sub2__menu
                                        li.sub__menu-element
                                            a.link__laptop(href='dell.html') Dell
                                        li.sub__menu-element
                                            a.link__laptop(href='asus.html') Asus
                                        li.sub__menu-element
                                            a.link__laptop(href='lenovo.html') Lenovo
                                        li.sub__menu-element
                                            a.link__laptop(href='hp.html') HP
                .header__laptop
                    a.link__laptop(href='/product/apple')
                        i.fa.fa-apple
                        |  MacOS
                .header__laptop
                    a.link__laptop(href='#')
                        i.fa.fa-windows
                        |  Windows
                        ul.sub__menu(style='text-align: center;')
                            li.sub__menu-element
                                a.link__laptop(href='/product/dell') Dell
                            li.sub__menu-element
                                a.link__laptop(href='/product/asus') Asus
                            li.sub__menu-element
                                a.link__laptop(href='/product/lenovo') Lenovo
                            li.sub__menu-element
                                a.link__laptop(href='/product/hp') HP
                .header__laptop
                    a.link__laptop(href='https://www.facebook.com/dnam.2507', target='_blank')
                        i.fa.fa-info
                        |  Th&ocirc;ng tin cho ch&uacute;ng t&ocirc;i
    .main
        .main__distance
        .main__distance
        .component__main
            .main__title TH&#x1AF;&#x1A0;NG HI&#x1EC6;U LAPTOP
            .main__laptop
                .main__laptop-component
                    a(href='/product/apple')
                        .laptop__component.apple
                    div
                        label Apple (Macbook)
                .main__laptop-component
                    a(href='/product/dell')
                        .laptop__component.dell
                    div
                        label Dell
                .main__laptop-component
                    a(href='/productlenovo')
                        .laptop__component.lenovo
                    div
                        label Lenovo
                .main__laptop-component
                    a(href='/product/asus')
                        .laptop__component.asus
                    div
                        label Asus
                .main__laptop-component
                    a(href='/product/hp')
                        .laptop__component.hp
                    div
                        label HP
        .main__distance
        .main__star
            mixin productCom(product) 
                .product.product-1
                    .product-image.product-link-image1
                        a.link-image(href='/')
                            .product-link-image(class!=attributes.class)
                    .product-name
                        a.product-link(href='/')=product.productName
                            a
                    .product-price #{product.buyPrice}đ
                    .product-description
                        ul.product-stat
                            .product-stat-component
                                li
                                    b.product-stat-title M&agrave;n h&igrave;nh:
                                    p.product-stat-details=product.productScreen
                            .product-stat-component
                                li
                                    b.product-stat-title CPU:
                                    p.product-stat-details=product.productCPU
                            .product-stat-component
                                li
                                    b.product-stat-title RAM:
                                    p.product-stat-details=product.productRam
                            .product-stat-component
                                li
                                    b.product-stat-title VGA:
                                    p.product-stat-details=product.productVGA
                            .product-stat-component
                                li
                                    b.product-stat-title HDH:
                                    p.product-stat-details=product.producOS
                            .product-stat-component
                                li
                                    b.product-stat-title N&#x1EB7;ng:
                                    p.product-stat-details=product.productWeight
                        br
                        .product-purchase
                            a.button-purchase(href="/cart/add/"+product.productId, onclick='handleCart("'+product.productId+'")')
                                i.fa.fa-plus(style='text-align: center;')
            each product in searchProduct
                +productCom(product)(class=product.productImage)
    .main__distance
    .footer
        .inner-footer
            .footer-logo
                a(href='/')
                    #footer-logo
            .footer-items
                .footer-title LION KING 
                .border
                .footer-content
                    | Mua laptop LION KING
                    br
                    | gi&aacute; r&#x1EBB; s&#x1ED1; 1, ch&#x1EA5;t l&#x1B0;&#x1EE3;ng s&#x1ED1; 1.
                    br
                    | H&atilde;y &dstrok;&#x1EBF;n v&#x1EDB;i ch&uacute;ng t&ocirc;i,
                    br
                    | &dstrok;&#x1EC3; tr&#x1EA3;i nghi&#x1EC7;m nh&#x1EEF;ng &dstrok;i&#x1EC1;u tuy&#x1EC7;t v&#x1EDD;i nh&#x1EA5;t.
            .footer-items
                .footer-title Truy C&#x1EAD;p Nhanh
                .border
                .footer-icon
                    .footer-icon1
                        a(href='/') Trang ch&#x1EE7; 
                    .footer-icon1
                        a(href='/') S&#x1EA3;n ph&#x1EA9;m 
                    .footer-icon1
                        a(href='/') D&#x1ECB;ch v&#x1EE5; 
                    .footer-icon1
                        a(href='/') Li&ecirc;n h&#x1EC7; 
            .footer-items
                .footer-title Li&ecirc;n H&#x1EC7;
                .border
                .footer-icon
                    .footer-icon2
                        i.fa.fa-map-marker(aria-hidden='true')
                        |   144, Xu&acirc;n Th&#x1EE7;y, C&#x1EA7;u Gi&#x1EA5;y, H&agrave; N&#x1ED9;i
                    .footer-icon2
                        i.fa.fa-phone(aria-hidden='true')
                        |   Phone
                    .footer-icon2
                        i.fa.fa-envelope(aria-hidden='true')
                        |   email@gmail.com
                .social-media
                    a(href='/')
                        i.fa.fa-facebook(aria-hidden='true')
                    a(href='/')
                        i.fa.fa-instagram(aria-hidden='true')
                    a(href='/')
                        i.fa.fa-twitter(aria-hidden='true')
                    a(href='/')
                        i.fa.fa-google-plus(aria-hidden='true')
        .footer-bottom
            | Copyright by &copy; LION KING
    script(type='text/javascript', src='/js/header.js')
    script(type='text/javascript', src='/js/body.js')
    script(type='text/javascript', src='/js/cart.js')
